<h1>カテゴリ一覧</h1>
<%= link_to 'new', new_category_path %>
<table>
  <tr>
    <th>id</th>
    <th>カテゴリ名</th>
    <th>friendly_id</th>
    <th>created_at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @categories.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= item.name %></td>
      <td>
        <%= item.friendly_id %></td>
      <td>
        <%= item.created_at %></td>
      <td>
        <%= link_to 'Show', item %></td>
      <td>
        <%= link_to 'Edit', edit_category_path(item) %></td>
      <td>
        <%= link_to 'Destroy', item, method: :delete %></td>
    </tr>
  <% end %>
</table>
